---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Exemple de formulaire sécurisé">
	<main>
		<h1>Exemple de formulaire sécurisé</h1>
		  <form action="https://usebasin.com/f/<YOUR_FORM_ID>" method="POST">
			<div class="link-card">
			  <label for="name">Nom</label>
			  <input type="text" name="name" id="name" required />
			</div>
			<div class="link-card">
			  <label for="email">Email</label>
			  <input type="email" name="email" id="email" required />
			</div>
			<div class="link-card">
			  <label for="message">Laisser un Message</label>
			  <textarea id="message" name="message" rows="5" cols="33" />
			</div>
			<div class="link-card">
			  <button type="submit">Envoyer</button>
			</div>
		  </form>
		</main>
</Layout>

<style>
	form {
		display:flex;
		flex-direction: column;
		gap: 20px;
	}
	.link-card {
		list-style: none;
		display: flex;
		padding: 10px;
		gap: 5px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		flex-direction: column;
	}
	.link-card > label {
		width: 100%;
		text-decoration: none;
		font-weight: 600;
		line-height: 1.4;
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	.link-card > input {
		border: 2px solid #23262d;
	}
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	h1 {
		font-size: 2rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
